---
import { useState } from 'react';
---

<header class="bg-white shadow-md">
  <div class="tcp-container border-b border-white/20 py-4">
    <div class="flex justify-between items-center">
      <a href="/">
        <img class="h-[50px] w-[187px]" src="/images/clini-store-logo.webp" alt="Clini Store" />
      </a>

      <!-- Botón hamburguesa para mobile -->
      <button
        class="text-[#02669A] md:hidden"
        onClick={() => document.getElementById('mobile-menu')?.classList.toggle('hidden')}
        aria-label="Abrir menú"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Menú desktop -->
      <nav class="hidden md:flex gap-8 list-none text-[#02669A]">
        <li><a href="#!">Quienes somos</a></li>
        <li><a href="#!">Servicios</a></li>
        <li><a href="#!">Sucursales</a></li>
      </nav>
    </div>

    <!-- Menú mobile -->
    <div id="mobile-menu" class="md:hidden hidden mt-4">
      <ul class="flex flex-col gap-4 text-[#02669A]">
        <li><a href="#!" class="block">Quienes somos</a></li>
        <li><a href="#!" class="block">Servicios</a></li>
        <li><a href="#!" class="block">Sucursales</a></li>
      </ul>
    </div>
  </div>
</header>
